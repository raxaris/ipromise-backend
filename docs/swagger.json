    "definitions": {
        "dto.CreatePromiseRequest": {
            "type": "object",
            "required": [
                "status",
                "title"
            ],
            "properties": {
                "deadline": {
                    "description": "Можно передавать только для основного промиса",
                    "type": "string"
                },
                "description": {
                    "type": "string"
                },
                "parent_id": {
